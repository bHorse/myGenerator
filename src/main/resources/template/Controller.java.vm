package ${package}.${moduleName}.controller;

import java.util.Arrays;
import java.util.Map;

import org.apache.shiro.authz.annotation.RequiresPermissions;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import ${package}.${moduleName}.entity.${className}Entity;
import ${package}.${moduleName}.service.${className}Service;
import ${mainPath}.common.mvc.model.ReturnJson;


/**
 * ${comments}
 *
 * @author ${author}
 * @email ${email}
 * @date ${datetime}
 */
@RestController
@RequestMapping("${moduleName}/${pathName}")
public class ${className}Controller {
    @Autowired
    private ${className}Service ${classname}Service;

    /**
     * 列表
     */
    @RequestMapping("/list")
    @RequiresPermissions("${moduleName}:${pathName}:list")
    public ReturnJson<${className}Vo> list(@RequestParam Map<String, Object> params) {
        return ${classname}Service.queryPage(params);
    }


    /**
     * 信息
     */
    @RequestMapping("/info/{${pk.attrname}}")
    @RequiresPermissions("${moduleName}:${pathName}:info")
    public ReturnJson<${className}Vo> info(@PathVariable("${pk.attrname}") ${pk.attrType} ${pk.attrname}) {
        return ${classname}Service.findById(${pk.attrname});
    }

    /**
     * 保存
     */
    @RequestMapping("/save")
    @RequiresPermissions("${moduleName}:${pathName}:save")
    public ReturnJson<${className}Vo> save(@RequestBody ${className}Entity ${classname}) {
        return ${classname}Service.insert(${classname});
    }

    /**
     * 修改
     */
    @RequestMapping("/update")
    @RequiresPermissions("${moduleName}:${pathName}:update")
    public ReturnJson<${className}Vo> update(@RequestBody ${className}Entity ${classname}) {
        return ${classname}Service.updateById(${classname});
    }

    /**
     * 删除
     */
    @RequestMapping("/delete")
    @RequiresPermissions("${moduleName}:${pathName}:delete")
    public ReturnJson<${className}Vo> delete(@RequestBody ${pk.attrType}[] ${pk.attrname}s) {
        return ${classname}Service.deleteBatchIds(Arrays.asList(${pk.attrname}s));
    }

}
